    ViewData["Title"] = "Dashboard Admin";
    ViewData["Role"] = "Admin";      // ⚠️ deve bater com o layout
    ViewData["Active"] = "Dashboard"; // ativa o menu inferior
}

<section class="dashboard-header">
    <h2>Dashboard Administrativo</h2>
